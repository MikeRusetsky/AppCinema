<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<androidx.cardview.widget.CardView
android:id="@+id/topframe"
android:layout_width="match_parent"
android:layout_height="100dp"
android:layout_margin="10dp"
app:cardCornerRadius="15dp"
android:elevation="5dp"
app:layout_constraintTop_toTopOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image1"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/film1" />

    <ImageView
        android:id="@+id/image2"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/film2" />

    <ImageView
        android:id="@+id/image3"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1 "
        app:srcCompat="@drawable/film3" />

    <ImageView
        android:id="@+id/image4"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/film4" />
</LinearLayout>

</androidx.cardview.widget.CardView

    <LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@id/lowframe"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/topframe">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/menu"/>

        <Button
            android:id="@+id/favourite_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        android:text="@string/fav"/> />

        <Button
        android:id="@+id/watch_later_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        android:text="@string/watch_later"/> />

        <Button
        android:id="@+id/collections_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        android:text="@string/collections"/> />

        <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        android:text="@string/settings"/> />
    </LinearLayout>

        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:text="@string/site"
    android:autoLink="web"
    android:linksClickable="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/topframe"/>

        <FrameLayout
    android:id="@+id/lowframe"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/purple"/>


</androidx.constraintlayout.widget.ConstraintLayout>